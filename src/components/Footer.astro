<style>
	.site-footer {
		margin-top: var(--s-10);
	}

	.footer-inner {
		display: flex;
		align-items: center;
		justify-content: space-between;
		padding-top: var(--s-5);
		padding-bottom: var(--s-7);
	}

	.copyright {
		font-size: var(--text-xs);
		letter-spacing: 0.08em;
		text-transform: uppercase;
		color: var(--muted);
		margin: 0;
	}

	.footer-socials {
		display: flex;
		align-items: center;
		gap: var(--s-5);
	}

	.footer-socials a {
		display: flex;
		align-items: center;
		color: var(--muted);
		text-decoration: none;
		transition: color 150ms ease, opacity 150ms ease;
	}

	.footer-socials a:hover {
		color: var(--ink);
		opacity: 1;
	}
</style>
