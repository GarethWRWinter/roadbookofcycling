---
const year = new Date().getFullYear();
const INSTAGRAM_URL = 'https://www.instagram.com/garethwinter/';
---

<footer class="rb-footer">
	<div class="rb-footer__inner">
		<p class="rb-footer__meta">Â© {year} Roadbook of Cycling. All rights reserved.</p>
		<a class="rb-footer__link" href={INSTAGRAM_URL} target="_blank" rel="me noopener noreferrer">Instagram</a>
	</div>
</footer>

<style>
	.rb-footer {
		margin-top: var(--s-8);
		padding: var(--s-7) 0;
		border-top: 1px solid var(--hairline);
		color: var(--muted);
		font-size: var(--text-sm);
	}
	.rb-footer__inner {
		max-width: var(--container);
		margin: 0 auto;
		padding: 0 var(--s-5);
		display: flex;
		justify-content: space-between;
		align-items: center;
		gap: var(--s-4);
	}
	.rb-footer__meta { margin: 0; }
	.rb-footer__link { color: inherit; text-decoration-color: rgba(11, 13, 16, 0.18); }
	.rb-footer__link:hover { text-decoration-color: rgba(11, 13, 16, 0.6); }
	@media (max-width: 720px) {
		.rb-footer__inner { padding: 0 var(--s-4); flex-direction: column; align-items: flex-start; }
	}
</style>
