---
interface Props {
	id: string;
	title?: string;
}

const { id, title = 'YouTube video' } = Astro.props;
const src = `https://www.youtube.com/embed/${id}`;
---

<div class="rb-video">
	<iframe
		src={src}
		title={title}
		frameborder="0"
		allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share"
		allowfullscreen
	></iframe>
</div>

<style>
	.rb-video {
		margin: var(--s-6) 0;
		border: 1px solid var(--border);
		background: rgba(11, 13, 16, 0.02);
		border-radius: 0;
		overflow: hidden;
	}
	.rb-video iframe {
		width: 100%;
		aspect-ratio: 16 / 9;
		display: block;
		border: 0;
	}
</style>
