---
import { Image } from 'astro:assets';
import { getCollection } from 'astro:content';
import BaseHead from '../../components/BaseHead.astro';
import Footer from '../../components/Footer.astro';
import FormattedDate from '../../components/FormattedDate.astro';
import Header from '../../components/Header.astro';
import { SITE_DESCRIPTION, SITE_TITLE } from '../../consts';

const posts = (await getCollection('blog')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={`Writing â€” ${SITE_TITLE}`} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<Header />

		<main class="listing-main">
			<div class="container">
				<header class="listing-head">
					<h1 class="listing-title">Writing</h1>
					<p class="listing-sub">Stories from inside the sport.</p>
				</header>

				<ul class="listing-feed">
					{posts.map((post) => (
						<li class="listing-item">
							<a href={`/blog/${post.id}/`} class="listing-card">
								{post.data.heroImage && (
									<div class="listing-image">
										<Image
											src={post.data.heroImage}
											alt={post.data.title}
											width={1200}
											height={675}
										/>
									</div>
								)}
								<div class="listing-body">
									<p class="listing-date label">
										<FormattedDate date={post.data.pubDate} />
									</p>
									<h2 class="listing-card-title">{post.data.title}</h2>
									{post.data.description && (
										<p class="listing-desc">{post.data.description}</p>
									)}
									<span class="listing-read">Read &rarr;</span>
								</div>
							</a>
						</li>
					))}
				</ul>
			</div>
		</main>

		<Footer />
	</body>
</html>

<style>
	.listing-main {
		padding-top: var(--s-9);
		padding-bottom: var(--s-10);
	}

	.listing-head {
		margin-bottom: var(--s-9);
		padding-bottom: var(--s-6);
		border-bottom: 1px solid var(--border);
	}

	.listing-title {
		font-family: var(--font-serif);
		font-size: clamp(2.5rem, 5vw, var(--text-4xl));
		font-weight: 300;
		letter-spacing: -0.02em;
		margin-bottom: var(--s-3);
	}

	.listing-sub {
		font-size: var(--text-lg);
		color: var(--muted);
		margin: 0;
	}

	.listing-feed {
		list-style: none;
		margin: 0;
		padding: 0;
		display: flex;
		flex-direction: column;
		gap: var(--s-10);
	}

	.listing-card {
		display: grid;
		grid-template-columns: 1fr 1fr;
		gap: var(--s-8);
		align-items: start;
		text-decoration: none;
		color: inherit;
	}

	.listing-image {
		width: 100%;
		aspect-ratio: 16 / 10;
		overflow: hidden;
		background: var(--border);
	}

	.listing-image img {
		width: 100%;
		height: 100%;
		object-fit: cover;
		transition: transform 700ms ease;
	}

	.listing-card:hover .listing-image img {
		transform: scale(1.02);
	}

	.listing-body {
		padding-top: var(--s-3);
	}

	.listing-date {
		margin-bottom: var(--s-4);
	}

	.listing-card-title {
		font-family: var(--font-serif);
		font-size: clamp(1.75rem, 3vw, var(--text-3xl));
		font-weight: 400;
		line-height: 1.1;
		letter-spacing: -0.01em;
		margin-bottom: var(--s-4);
		transition: opacity 150ms ease;
	}

	.listing-card:hover .listing-card-title {
		opacity: 0.65;
	}

	.listing-desc {
		font-size: var(--text-base);
		color: var(--muted);
		line-height: 1.65;
		margin-bottom: var(--s-5);
	}

	.listing-read {
		font-family: var(--font-sans);
		font-size: var(--text-xs);
		font-weight: 600;
		letter-spacing: 0.1em;
		text-transform: uppercase;
		color: var(--ink);
		border-bottom: 1px solid var(--border);
		padding-bottom: 2px;
	}

	/* Responsive */
	@media (max-width: 800px) {
		.listing-card {
			grid-template-columns: 1fr;
			gap: var(--s-4);
		}
	}
</style>
