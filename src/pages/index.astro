---
import { Image } from "astro:assets";
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import EmailCommentBlock from "../components/EmailCommentBlock.astro";
import heroImage from "../assets/home/gareth-winter-home-1.JPG";
import bradHourRecordImage from "../assets/home/gareth-winter-sir-bradley-wiggins-hour-record.jpg";
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>

	<body>
		<Header />
		<main>
			<section class="rb-hero">
				<div class="rb-hero__inner">
					<div class="rb-hero__copy">
						<p class="rb-eyebrow">Roadbook of Cycling</p>
						<h1>Performance, craft, and the quiet obsession of getting better.</h1>
						<p class="rb-lede">
							I write from inside the sport. Where training meets equipment. Where detail becomes confidence.
							Where progress is earned, not claimed.
						</p>

						<ul class="rb-pillars">
							<li>Inside the sport.</li>
							<li>Training × equipment.</li>
							<li>Detail as confidence.</li>
							<li>Progress, earned.</li>
							<li>168,726.8 km logged on Strava.</li>
						</ul>

						<div class="btn-row">
							<a class="btn btn-primary" href="/blog">Read the writing</a>
							<a class="btn btn-secondary" href="/about">About</a>
						</div>

						<div class="rb-cred">
							<p class="rb-cred__lead">
								I’ve spent over a decade inside elite performance environments.
							</p>
							<p>
								Former Creative Director at Team Sky, working alongside Olympic champions and Grand Tour winners.
								Contributor to systems that delivered Olympic gold medals, Tour de France and Giro d’Italia victories.
							</p>
							<p>
								Now leading creative strategy and performance systems at Mindvalley, focused on human optimisation and
								transformation at global scale.
							</p>
							<p class="muted">Cyclist. Creative leader. Student of marginal gains.</p>

							<Image
								src={bradHourRecordImage}
								alt="Gareth Winter with Sir Bradley Wiggins during the Hour Record project"
								width={1600}
								height={1067}
								loading="lazy"
							/>
						</div>
					</div>

					<div class="rb-hero__media">
						<Image
							src={heroImage}
							alt="Gareth Winter at a time trial event"
							width={900}
							height={1200}
							loading="eager"
						/>
						<p class="rb-caption">Real-world training. Real-world constraints. Real-world obsession.</p>
					</div>
				</div>
			</section>

			<section class="rb-home-contact" aria-label="Contact">
				<div class="rb-home-contact__inner">
					<EmailCommentBlock
						action="https://formspree.io/f/xdalabzw"
						title="Home"
						url={Astro.url.toString()}
						heading="Get in touch"
						copy="Questions, partnership ideas, or speaking requests — drop me a note and I’ll get back to you."
					/>
				</div>
			</section>
		</main>
		<Footer />

		<style>
			.rb-hero {
				padding: var(--s-8) 0;
			}
			.rb-home-contact {
				padding: var(--s-4) 0 var(--s-10);
			}
			.rb-home-contact__inner {
				max-width: var(--container);
				margin: 0 auto;
				padding: 0 var(--s-5);
			}

			.rb-hero__inner {
				max-width: var(--container);
				margin: 0 auto;
				padding: 0 var(--s-5);
				display: grid;
				grid-template-columns: 1.05fr 0.95fr;
				gap: var(--s-8);
				align-items: start;
			}
			.rb-eyebrow {
				margin: 0 0 var(--s-3);
				font-size: var(--text-xs);
				letter-spacing: 0.1em;
				text-transform: uppercase;
				color: var(--muted);
			}
			.rb-lede {
				font-size: 1.1rem;
				max-width: 56ch;
				color: rgba(11, 13, 16, 0.86);
			}
			.rb-pillars {
				margin: var(--s-6) 0;
				padding-left: 1.25rem;
			}
			.rb-pillars li { margin-bottom: 0.4rem; }
			.rb-cred {
				margin-top: var(--s-7);
				max-width: 62ch;
			}
			.rb-cred__lead { font-weight: 650; }
			.rb-hero__media img {
				border-radius: 0;
			}
			.rb-caption {
				margin: var(--s-3) 0 0;
				font-size: var(--text-xs);
				color: var(--muted);
			}

			@media (max-width: 980px) {
				.rb-hero__inner {
					grid-template-columns: 1fr;
					gap: var(--s-7);
					padding: 0 var(--s-4);
				}
			}
		</style>
	</body>
</html>
